<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mondari.mapper.PointMapper">
    <insert id="insertOne" parameterType="Point">
        insert into db_example.point (name, x, y, z)
        values (#{name}, #{x}, #{y}, #{z});
    </insert>

    <select id="selectById" resultType="com.mondari.domain.Point">
        select *
        from db_example.point
        where id = #{id};
    </select>
</mapper>
